<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_single_job_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saloni.placementv2.SingleJobProfileDetails"
    tools:showIn="@layout/activity_single_job_profile">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:fontFamily="fonts/helvetica.ttf"
            android:id="@+id/textViewCompanyName"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Designation"
            android:fontFamily="fonts/helvetica.ttf"
            android:id="@+id/textViewDesignation"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:fontFamily="fonts/helvetica.ttf"
            android:id="@+id/textViewLocation"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compensation for BTech"
            android:fontFamily="fonts/helvetica.ttf"
            android:id="@+id/textViewCompensationBTech"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compensation for Mtech"
            android:fontFamily="fonts/helvetica.ttf"
            android:id="@+id/textViewCompensationMTech"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pre Placement Talk Date"
            android:fontFamily="fonts/helvetica.ttf"
            android:id="@+id/textViewPrePlacementTalk"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Date"
            android:fontFamily="fonts/helvetica.ttf"
            android:id="@+id/textViewEventDate"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:fontFamily="fonts/helvetica.ttf"
            android:id="@+id/textViewComments"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEdit"
            android:visibility="invisible"
            android:fontFamily="fonts/helvetica.ttf"
            android:text="Edit"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonApply"
            android:visibility="invisible"
            android:fontFamily="fonts/helvetica.ttf"
            android:text="Apply"
            />

    </LinearLayout>


</RelativeLayout>
