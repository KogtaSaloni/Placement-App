<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewID"
        android:textSize="0dp"
        android:fontFamily="fonts/helvetica.ttf"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:fontFamily="fonts/helvetica.ttf"
        android:id="@+id/textViewCompanyName"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Designation"
        android:fontFamily="fonts/helvetica.ttf"
        android:id="@+id/textViewDesignation"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:fontFamily="fonts/helvetica.ttf"
        android:id="@+id/textViewLocation"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compensation for BTech"
        android:fontFamily="fonts/helvetica.ttf"
        android:id="@+id/textViewCompensationBTech"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compensation for Mtech"
        android:fontFamily="fonts/helvetica.ttf"
        android:id="@+id/textViewCompensationMTech"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pre Placement Talk Date"
        android:fontFamily="fonts/helvetica.ttf"
        android:id="@+id/textViewPrePlacementTalk"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Date"
        android:fontFamily="fonts/helvetica.ttf"
        android:id="@+id/textViewEventDate"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:fontFamily="fonts/helvetica.ttf"
        android:id="@+id/textViewComments"/>

</LinearLayout>
