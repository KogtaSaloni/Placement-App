<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_job_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saloni.placementv2.AddJobProfile"
    tools:showIn="@layout/activity_add_job_profile">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Company Name"
                android:id="@+id/editTextCompanyName"
                android:fontFamily="fonts/helvetica.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Designation"
                android:fontFamily="fonts/helvetica.ttf"
                android:id="@+id/editTextDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Location"
                android:fontFamily="fonts/helvetica.ttf"
                android:id="@+id/editTextLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_margin="5dp"
                android:inputType="numberDecimal"
                android:hint="Compensation BTech"
                android:fontFamily="fonts/helvetica.ttf"
                android:id="@+id/editTextCompensationBTech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_margin="5dp"
                android:inputType="numberDecimal"
                android:hint="Compensation Mtech"
                android:fontFamily="fonts/helvetica.ttf"
                android:id="@+id/editTextCompensationMTech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Pre-placement Talk"
                android:fontFamily="fonts/helvetica.ttf"
                android:id="@+id/editTextPrePlacementTalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Event Date"
                android:fontFamily="fonts/helvetica.ttf"
                android:id="@+id/editTextEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Comments"
                android:fontFamily="fonts/helvetica.ttf"
                android:id="@+id/editTextComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="5dp"
                android:id="@+id/buttonAddJob"
                android:text="Submit"
                android:fontFamily="fonts/helvetica.ttf"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
